<div class="grid_12">
  <div class="box">
    <h1><%=t :Wisp_list %></h1>

    <table>
      <thead>
      <tr>
        <th><%=t :Name %></th>
        <th><%=t :Notes %></th>
        <th>&nbsp;</th>
        <th>&nbsp;</th>
        <th class="green"><%=t :Up %></th>
        <th class="red"><%=t :Down %></th>
        <th><%=t :Unknown %></th>
        <th>&nbsp;</th>
      </tr>
      </thead>

      <tbody>
      <% @wisps.each do |wisp| %>
          <% if auth?(:wisps_viewer) || auth?(:wisp_hotspots_viewer, wisp) %>
              <tr class="<%= cycle 'odd', 'even' %>">
                <td><%= link_to wisp.name, wisp_hotspots_path(wisp) %></td>
                <td colspan="3"><%= wisp.notes %></td>
                <td class="center"><%= wisp.hotspots_up.count %></td>
                <td class="center"><%= wisp.hotspots_down.count %></td>
                <td class="center"><%= wisp.hotspots_unknown.count %></td>
                <td><%= link_to t(:Availability_report), wisp_availability_report_path(wisp) %></td>
              </tr>
          <% end %>
      <% end %>
      </tbody>
    </table>

    <% if auth? :wisps_viewer %>
        <h6><%= link_to t(:Show_all_hotspots), hotspots_path %></h6>
    <% end %>
  </div>
</div>
