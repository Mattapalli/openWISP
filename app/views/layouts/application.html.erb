<!DOCTYPE html>
<html>
<head>
  <title>OWGM</title>

  <link rel="shortcut icon" href="<%= image_path 'caspur.ico' %>" />

  <%= stylesheet_link_tag '960/css/reset',
                          '960/css/text',
                          '960/css/grid',
                          '960/css/layout',
                          '960/css/nav',
                          '960/css/notification',
                          'application'
  %>

  <%= for_ie :version => '6' do %>
      <%= stylesheet_link_tag '960/css/ie6' %>
  <% end %>

  <%= for_ie :if => 'gte', :version => '7' do %>
      <%= stylesheet_link_tag '960/css/ie' %>
  <% end %>

  <%= javascript_include_tag :defaults, 'jquery.observe' %>

  <%= content_for :after_defaults %>

  <%= content_for :js_templates %>

  <%= csrf_meta_tag %>
</head>
<body>
<div class="container_12">
  <div class="grid_12">
    <h1 id="branding">
      <%= link_to image_tag("logo_caspur.png", :border => 0, :size => "58x45", :alt => 'Open WISP Manager', :class => "wispmanager_logo") %> Open Wisp Geographic Monitoring
      <br />
      <%= link_to_locale 'it' %> <%= link_to_locale 'en' %>
    </h1>

    <ul class="nav main">
      <% if user_signed_in? %>
          <%= render_breadcrumbs :tag => :li, :separator => '<li class="spacer">&raquo</li>' %>
          <li id="logout"><%= link_to t(:Sign_out), destroy_user_session_path %></li>
      <% end %>
    </ul>

    <% if flash[:notice] || flash[:alert] %>
        <div class="box">
          <p class="notice"><%= flash[:notice] %></p>
          <p class="alert"><%= flash[:alert] %></p>
        </div>
    <% end %>
  </div>

  <div class="clear"></div>
  <br />
  <%= yield %>
  <div class="clear"></div>
</div>
</body>
</html>
