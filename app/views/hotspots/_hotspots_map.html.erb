<%= @map.div(:width => 920, :height => 500) %>
<br />
<p>
	<strong><%=t :Show %>:</strong>
	<% active = params[:filter] || 'all' %>
	<%= link_to t(:all), {:filter => 'all'}, :class => (active == 'all' ? 'hl' : 'nohl') %>
	<%= link_to t(:up), {:filter => 'up'}, :class => (active == 'up' ? 'hl' : 'nohl') %>
	<%= link_to t(:down), {:filter => 'down'}, :class => (active == 'down' ? 'hl' : 'nohl') %>
	<%= link_to t(:unknown), {:filter => 'unknown'}, :class => (active == 'unknown' ? 'hl' : 'nohl') %>
</p>