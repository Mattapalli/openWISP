<div class="grid_12">
	<div class="box">
		<h2><%=t :Hotspots_map %></h2>
		<br />
		<div id="hotspots_map">
			<%= render 'hotspots_map' %>
		</div>
    <div id="map_loading" class="hidden">
      <p><%=t :Loading %> <%=t :markers%> <%= image_tag 'spinner.gif', :size => '22x22' %></p>
    </div>
	</div>

	<div class="clear"></div>

	<div class="box">
		<h2>
          <%=t :Hotspots %>
          <span class="rfloat">
            <%=t :up %>: <%= Hotspot.up_count %>
            <%=t :down %>: <%= Hotspot.down_count %>
            <%=t :unknown %>: <%= Hotspot.unknown_count %>
          </span>
        </h2>

		<br />

		<table>
			<thead id="hotspots_thead">
				<%= render 'hotspots_thead' %>
			</thead>

			<tbody id="hotspots">
				<%= render @hotspots %>
			</tbody>
		</table>

		<div id="hotspots_quicksearch" class="bold">
			<%= render 'hotspots_quicksearch' %>
		</div>

		<div id="hotspots_paginate">
			<%= paginate @hotspots %>
    </div>
		<br />

    <div id="loading" class="hidden">
      <p><%=t :Loading %> <%= image_tag 'spinner.gif' %></p>
    </div>
		<br />

	</div>
</div>
